@model IEnumerable<FavoritesModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Favorites List";
}

<p>
    <a asp-action="ClearFavorites">Clear</a>
</p>

@if (Model is not null && Model.Count() > 0)
{
    string favoritesCount = Model.Count() == 1 ? "1 favorite found." : Model.Count() + " favorites found.";
    <p class="bg-secondary text-light">
        @favoritesCount
    </p>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BlogTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlogScore)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogScore)
                    </td>

                    <td>
                        <a asp-action="RemoveFromFavorites" asp-route-blogId="@item.BlogId" asp-route-userId="@item.UserId" class="text-white">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="bg-secondary text-light">
        No favorites found.
    </p>
}





