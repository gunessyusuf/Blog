@model TagModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="row aligncenter paddingbottom">
    <div class="col-12">

        <h3 class="text-center">Are you sure you want to delete this tag?</h3>
        <div>

            <partial name="_Details" model="Model" />
    
            <!-- 
                içerisinde kullanıcıdan gizli (hidden) olarak id değerini barındıran bu formda 
                evete tıklandığında id değeri formun Delete ile tanımlanmış aksiyonuna yani 
                TagsController'ının ActionName üzerinden Delete olarak route tanımı değiştirilmiş 
                DeleteConfirmed aksiyonuna parametre olarak gönderilir ve biz de id değeri üzerinden 
                controller action'ında silme işlemini ilgili servis üzerinden gerçekleştiririz
            -->
            <form asp-action="Delete">
	            @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div style="text-align: center;">

                    <input type="submit" value="Yes" class="btn btn-danger" />&nbsp;&nbsp;

                    <!-- No tıklandığında Index action'ı üzerinden listeleme sayfası gelir -->
                    <a asp-action="Index" class="btn btn-success">No</a>

                </div>

            </form>
        </div>
    
    </div>
</div>



