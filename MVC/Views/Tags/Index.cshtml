@model IEnumerable<TagModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Tag List";
}

@if (ViewBag.DeleteMessage is not null)
{
    <p class="text-success">@ViewBag.DeleteMessage</p>
}

@* @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) *@
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New Tag</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="4" class="text-bg-dark text-white">
                @{
                    string count = "No tags found!";
                    if (Model is not null && Model.Count() > 0)
                    {
                        count = Model.Count() + (Model.Count() == 1 ? " tag" : " tags") + " found.";
                    }
                }

                @count
            </th>
        </tr>
        <tr>
            <th style="width: 55%;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.IsPopularDisplay)
            </th>
            <th style="width: 10%;">
                @Html.DisplayNameFor(model => model.BlogCountDisplay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsPopularDisplay)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.BlogCountDisplay)
					</td>
					<td class="text-end">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: underline;">Details</a>
                            @:&nbsp;|&nbsp;
                            <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: underline;">Edit</a>
                            @:&nbsp;|&nbsp;
                            <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: underline;">Delete</a>
                        }
                </td>
				</tr>
		}
    </tbody>
</table>



