@model BlogModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit Blog";
}

<div class="row">
	<div class="col-12 aligncenter">
        <form asp-action="Edit" enctype="multipart/form-data">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

			@if (User.IsInRole("Admin"))
			{
				<div class="row mb-3">
					<label asp-for="Score" class="col-4 col-form-label"></label>
					<div class="col-8">
						<input asp-for="Score" class="form-control" placeholder="Enter score..." />
						<span asp-validation-for="Score" class="text-danger"></span>
					</div>
				</div>
			}

            <div class="row mb-3">
                <label asp-for="Title" class="col-4 col-form-label"></label>
				<div class="col-8">
					<input asp-for="Title" class="form-control" placeholder="Enter title..." />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Content" class="col-4 col-form-label"></label>
				<div class="col-8">
					<textarea asp-for="Content" class="form-control" rows="3" placeholder="Enter content..."></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
            </div>

			<input asp-for="UserId" type="hidden" />

			<div class="row mb-3">
				<label asp-for="TagIds" class="col-4 col-form-label"></label>
				<div class="col-8">
					<select multiple asp-for="TagIds" class="form-select" asp-items="ViewBag.Tags">
					</select>
					<span asp-validation-for="TagIds" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label asp-for="Image" class="col-4 col-form-label"></label>
				<div class="col-8">
					@if (Model.ImgSrcDisplay is not null)
					{
						<img src="@Model.ImgSrcDisplay" class="img-fluid" />
					}
					else
					{
						<i class="fa-regular fa-image" title="No Image"></i>
					}
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-4 col-5">
					<input type="file" name="image" class="form-control" accept="@AppSettings.AcceptedImageExtensions" />
				</div>
				<div class="col-3 text-end">
					<a asp-action="DeleteImage" asp-route-blogId="@Model.Id" class="btn btn-danger">Delete Image</a>
				</div>
			</div>

			<input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-4 col-8">
					<input type="submit" value="Save" class="btn btn-info" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-info text-dark">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index" class="btn btn-outline-info text-dark">Back to Blog List</a>
				</div>
            </div>
        </form>
    </div>
</div>




